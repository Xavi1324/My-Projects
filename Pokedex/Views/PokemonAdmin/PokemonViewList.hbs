<link rel="stylesheet" href="/Css/PokemonViewList.css">
<div class="container-fluid ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Pokémones</h2>
        <a href="/Pokemones/AddPokemon" class="btn btn-primary">Agregar Nuevo Pokemon</a>
    </div>
    
    <div class="pokemon-grid">
        {{#each pokemones}}
        <div class="pokemon-card ms-4" onclick="window.location.href='/Pokemones/Edit/{{this.id}}'">
            <div class="pokemon-image">
                <img src="{{this.imagen}}" alt="{{this.nombre}}">
            </div>
            <div class="pokemon-details">
                <h3 class="pokemon-name">{{this.nombre}}</h3>
                <p class="pokemon-type {{this.Tipo.nombre }}">Tipo: {{this.Tipo.nombre}}</p>
                <p class="pokemon-region">Región: {{this.Region.nombre}}</p>
            </div>
        </div>
        {{else}}
            <div class="alert alert-warning" role="alert">
                No hay pokemones disponibles
            </div>
        {{/each}}
    </div>

</div>

<div class="pokemon-card ms-4"></div>