<link rel="stylesheet" href="Css/ListTipos.css">
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Lista de Tipos</h2>
        <a href="/Tipos/Add" class="btn btn-primary mb-3">Agregar Nuevo Tipo</a>
    </div>

    <!-- Verifica si hay tipos disponibles -->
    {{#if tipos.length}}
        <div class="tipos-container">
            {{#each tipos}}
                <div class="d-flex justify-content-between align-items-center tipos-list p-3 m-2 bg-white text-black rounded-2 shadow-sm">
                    <p class="ms-2 mb-0">{{this.nombre}}</p>
                    <div>
                        <a href="/Tipos/Edit/{{id}}" class="btn btn-warning btn-sm mx-1">Editar</a>
                        <form action="/Tipos/ConfirmDeleteTipos/{{id}}" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm mx-1">Eliminar</button>
                        </form>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="alert alert-warning" role="alert">
            No hay tipos disponibles.
        </div>
    {{/if}}
</div>
