<link rel="stylesheet" href="/Css/Play.css">
<div class="video-player-container vh-100 d-flex flex-column">
    <div class="container-fluid flex-grow-1 d-flex flex-column">
        <h2 class="mt-3">{{serie.title}}</h2>
        <p class="text-muted">{{serie.genero}}</p>
        
        <div class="video-container flex-grow-1 mb-3 border border-primary">
            <iframe 
                src="https://www.youtube.com/embed/{{getYouTubeVideoId serie.videoUrl}}" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
            ></iframe>
        </div>
        
        <div class="mb-3">
            <h3>DescripciÃ³n:</h3>
            <p>{{serie.descripcion}}</p>
        </div>
        
        <div class="mb-3">
            <a href="/Series/Edit/{{serie.id}}" class="btn btn-warning">Editar</a>
            <form action="/Series/Delete/{{serie.id}}" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
            <a href="/Series" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
</div>
