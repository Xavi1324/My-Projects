<link rel="stylesheet" href="Css/GeneroStyles.css">
<div class="container-fluid py-4">
    <!-- Título de Géneros -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Géneros</h2>
        <a href="/Genero/Add" class="btn btn-primary">Agregar Género</a>
    </div>
    
    <!-- Grid de Géneros -->
    <div class="genres-grid">
    {{#each generos}}
    <div class="genre-card">
        <div class="genre-image">
            <img src="{{this.imagen}}" alt="{{this.nombre}}">
        </div>
        <h3 class="genre-name">{{this.nombre}}</h3>
        <a href="/Genero/Edit/{{this.nombre}}" class="btn btn-warning m-2">Editar</a> <!-- Botón para editar -->
    </div>
    {{else}}
    <div class="alert alert-info">No hay géneros disponibles</div>
    {{/each}}
</div>

</div>
