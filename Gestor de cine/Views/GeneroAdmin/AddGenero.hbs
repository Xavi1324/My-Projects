<!-- View/GeneroAdmin/AddGenero.hbs -->
<link rel="stylesheet" href="Css/GeneroStyles.css"> <!-- Asegúrate de que la ruta sea correcta -->

<div class="container">
    <h2>Agregar Género</h2>

    {{#if errorMessage}}
        <div class="alert alert-danger">{{errorMessage}}</div> <!-- Muestra el mensaje de error si existe -->
    {{/if}}

    <form action="/Genero/Add" method="POST">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre del Género</label>
            <input type="text" id="nombre" name="nombre" class="form-control" value="{{genero.nombre}}" required>
        </div>
        <div class="mb-3">
            <label for="imagen" class="form-label">Imagen URL</label>
            <input type="url" id="imagen" name="imagen" class="form-control" value="{{genero.imagen}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Agregar Género</button>
        <a href="/Genero" class="btn btn-secondary">Volver a la lista de géneros</a>
    </form>
</div>



